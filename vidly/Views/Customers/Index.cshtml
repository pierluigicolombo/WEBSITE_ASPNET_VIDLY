@model vidly.ViewModels.ListCostumersViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Customers</h1>
@if (Model.Customers.Count == 0)
{
    <p>We don't have any customers</p>
}
else
{
    <h3>Customers</h3>
    <ul>
        @foreach (var customer in Model.Customers)
        {
            
        <li>@Html.ActionLink(customer.Name, "GetCustomer", "Customers", new { id = customer.Id }, new { @class = "customer" })</li>
        }
    </ul>
}


