@model Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.MovieGenre.Name</li>
    <li>Release: @Model.ReleaseDate</li>
    @if(@Model.DateAdded != null){
    <li>Added : @Model.DateAdded</li>
    }
    <li>in Stock: @Model.numberInStock</li>


</ul>